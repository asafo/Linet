						~docdetails:description:11~
						~docdetails:qty:11~
						~docdetails:unit_price:11~
						~docdetails:price:11~

						~docdetails:description:12~
						~docdetails:qty:12~
						~docdetails:unit_price:12~
						~docdetails:price:12~

					<tr>
						<td width="388" style="border-style: hidden;"></td>
						
						<td width="100" colspan="2">סה"כ חייב מע"מ</td>
						<td width="50">~docs:sub_total~</td>
					</tr>
					<tr>
						<td width="388" border=0 style="border-style: hidden;"></td>
						<td width="100" border=0 colspan="2">סה"כ פטור ממע"מ</td>
