						~docdetails:unit_price:4~
						~docdetails:price:4~

						~docdetails:description:5~
						~docdetails:qty:5~
						~docdetails:unit_price:5~
						~docdetails:price:5~

						~docdetails:description:6~
						~docdetails:qty:6~
						~docdetails:unit_price:6~
						~docdetails:price:6~

						~docdetails:description:7~
						~docdetails:qty:7~
